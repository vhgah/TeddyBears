<!-- Product slider -->
<section class="section-b-space p-t-0 ratio_asos">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="product-4 product-m no-arrow">
                    @foreach (var item1 in ViewBag.ListThu2)
                    {
                        <div class="product-box">
                            <div class="img-wrapper">
                                <div class="front">
                                    @{
                                        var path = item1.PRIMARY_IMAGE;
                                    }
                                    <a href="@Url.Action("Details","Product",new { id=item1.ID})">
                                        <img src="@Url.Content(path)"
                                             class="img-fluid blur-up lazyload bg-img" alt="">
                                    </a>
                                </div>
                                <div class="back">
                                    <a href="@Url.Action("Details","Product",new { id=item1.ID})">
                                        <img src="@Url.Content(path)"
                                             class="img-fluid blur-up lazyload bg-img" alt="">
                                    </a>
                                </div>
                                <div class="cart-info cart-wrap">
                                    <button data-toggle="modal" data-target="#addtocart"
                                            title="Add to cart">
                                        <i class="ti-shopping-cart"></i>
                                    </button> <a href="javascript:void(0)" title="Add to Wishlist">
                                        <i class="ti-heart" aria-hidden="true"></i>
                                    </a> <a href="#"
                                            data-toggle="modal" data-target="#quick-view" title="Quick View">
                                        <i class="ti-search" aria-hidden="true"></i>
                                    </a> <a href="compare.html" title="Compare">
                                        <i class="ti-reload"
                                           aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="product-detail">
                                <div class="rating">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                </div>
                                <a href="product-page(no-sidebar).html">
                                    <h6>@item1.NAME</h6>
                                </a>
                                <h4>@item1.PRICE</h4>
                                <ul class="color-variant">
                                    <li class="bg-light0"></li>
                                    <li class="bg-light1"></li>
                                    <li class="bg-light2"></li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
