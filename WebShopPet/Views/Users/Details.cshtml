@model WebShopPet.Models.USER

@{
    ViewBag.Title = "Details";
    string ImagePath = Model.AVATAR;
}

<link rel="Stylesheet" href="@Href("~/Assets/User/css/profile.css")" type="text/css" />


<div class="card">
    <img src="@Url.Content(ImagePath)" alt="John" style="width:20%" class="img-circle">
    <div class="infor">
        <h1>@Html.DisplayFor(model => model.NAME)</h1>
        <p class="title">@Html.DisplayFor(model => model.EMAIL)</p>
        <p>
            @if (Model.SEX != null)
            {
                @Html.DisplayFor(model => model.SEX)
            }
        </p>
        <p> @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new {@class = "btn-edit" })</p>
    </div>
</div>
